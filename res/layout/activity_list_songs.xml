<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout android:background="@color/black" android:layout_width="fill_parent" android:layout_height="1dp"></LinearLayout>

    <LinearLayout
            android:id="@+id/play_all_button"
            android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/selector" >

        <ImageView
                android:id="@+id/songlist_action_top_button"
                android:src="@drawable/play"
                android:layout_width="30dp"
                android:layout_height="30dp" />

    <TextView
            android:id="@+id/songlist_action_top_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/play_all"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_weight="1"
            />
   </LinearLayout>
    <LinearLayout android:background="@color/orange_transparent" android:layout_width="fill_parent" android:layout_height="1dp"></LinearLayout>

    <ListView
          android:id="@+id/activity_list_songs_list"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:fastScrollEnabled="true"
          />
          
</LinearLayout>
